{
  "name": "@hive/wallet",
  "version": "0.1.0",
  "private": false,
  "scripts": {
    "clean": "rm -rf ./public/auth/* && rm -rf ./public/locales/* && rm -rf ./public/smart-signer/*",
    "copy:worker": "cp ../../node_modules/@hiveio/hb-auth/dist/worker.js ./public/auth/",
    "copy:assets": "cp -r ../../node_modules/@hiveio/hb-auth/dist/assets ./public/auth/assets",
    "predev": "pnpm run clean",
    "dev": "react-env -- next dev -p 4000 | pnpm dlx pino-pretty --colorize",
    "devssl": "react-env -- next dev --port 4000 --experimental-https --experimental-https-key ../../ssl/server-key.pem --experimental-https-cert ../../ssl/server-cert.pem | pnpm dlx pino-pretty --colorize",
    "prebuild": "pnpm run clean",
    "build": "react-env -- next build",
    "postbuild": "pnpm run copy:worker && pnpm run copy:assets",
    "start": "react-env -- next start -p 4000",
    "lint": "eslint .",
    "pw:test:local": "playwright test --config=playwright.local4000.config.ts",
    "pw:test:local:chromium": "playwright test --project=chromium --config=playwright.local4000.config.ts --headed",
    "pw:test:local:firefox": "playwright test --project=firefox --config=playwright.local4000.config.ts --headed",
    "pw:test:local:webkit": "playwright test --project=webkit --config=playwright.local4000.config.ts --headed",
    "pw:test:local:experimental:ui": "playwright test --config=playwright.local4000.config.ts --ui"
  },
  "dependencies": {
    "@beam-australia/react-env": "^3.1.1",
    "@hiveio/healthchecker-component": "catalog:hiveio-toolset",
    "@hive/eslint-config-custom": "workspace:*",
    "@hive/middleware": "workspace:*",
    "@hive/logger": "workspace:*",
    "@hive/smart-signer": "workspace:*",
    "@hive/tailwindcss-config": "workspace:*",
    "@hive/transaction": "workspace:*",
    "@hive/tsconfig": "workspace:*",
    "@hive/ui": "workspace:*",
    "@hiveio/wax": "catalog:hiveio-toolset",
    "@hookform/resolvers": "^3.3.2",
    "@next/bundle-analyzer": "^14.2.2",
    "@types/big.js": "^6.2.2",
    "@types/node": "20.10.4",
    "@types/react": "18.3.0",
    "@types/react-dom": "18.3.0",
    "big.js": "^6.2.1",
    "copy-webpack-plugin": "^12.0.1",
    "moment": "^2.29.4",
    "next": "^14.2.5",
    "next-i18next": "^15.1.1",
    "next-pwa": "^5.6.0",
    "next-qrcode": "^2.5.1",
    "next-themes": "^0.2.1",
    "next-transpile-modules": "^10.0.1",
    "react": "18.3.0",
    "react-dom": "18.3.0",
    "recharts": "^2.10.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.1",
    "typescript": "5.3.3"
  }
}
