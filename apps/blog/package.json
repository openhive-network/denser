    "@types/node": "20.10.4",
    "@types/react": "18.3.0",
    "@types/react-dom": "18.3.0",
    "@types/remarkable": "^2.0.8",
    "@types/sanitize-html": "^2.9.5",
    "@uiw/react-md-editor": "^3.25.6",
    "big.js": "^6.2.1",
    "class-variance-authority": "^0.6.1",
    "clsx": "^1.2.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "hive-auth-client": "^0.1.5",
    "http-errors": "^2.0.0",
    "i": "^0.3.7",
    "i18next": "^23.7.9",
    "iron-session": "^8.0.1",
    "lucide-react": "^0.259.0",
    "md-editor-rt": "^5.6.1",
    "moment": "^2.29.4",
    "multihashes": "^4.0.3",
    "next": "^14.2.5",
    "next-i18next": "^15.1.1",
    "next-pwa": "^5.6.0",
    "next-remove-imports": "^1.0.12",
    "next-themes": "^0.2.1",
    "next-transpile-modules": "^10.0.1",
    "pino": "^8.17.1",
    "playwright-merge-html-reports": "^0.2.8",
