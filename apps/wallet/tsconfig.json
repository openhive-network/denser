{
  "extends": "@hive/tsconfig/base.json",
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@/wallet/*": ["./*"],
      "@smart-signer/*": ["../../packages/smart-signer/*"],
      "@operations/*": ["../../packages/operations/*"],
      "@ui/*": ["../../packages/ui/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/ui/lib/parse-date.ts"
  ],
  "exclude": ["node_modules", "playwright"]
}
