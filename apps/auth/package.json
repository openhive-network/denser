{
  "name": "@hive/auth",
  "version": "0.1.0",
  "main": "./index.ts",
  "types": "./index.ts",
  "private": false,
  "scripts": {
    "clean": "rm -rf ./public/auth/* && rm -rf ./public/locales/* && rm -rf ./public/smart-signer/*",
    "copy:worker": "cp ../../node_modules/@hiveio/hb-auth/dist/worker.js ./public/auth/",
    "predev": "pnpm run clean",
    "dev": "react-env -- next dev -p 5000 | pnpm dlx pino-pretty --colorize",
    "devssl": "react-env -- next dev --port 5000 --experimental-https --experimental-https-key ../../ssl/server-key.pem --experimental-https-cert ../../ssl/server-cert.pem | pnpm dlx pino-pretty --colorize",
    "prebuild": "pnpm run clean",
    "build": "react-env -- next build",
    "postbuild": "pnpm run copy:worker",
    "start": "react-env -- next start -p 5000",
    "lint": "eslint .",
    "test:jest": "jest --watch"
  },
  "dependencies": {
    "@beam-australia/react-env": "^3.1.1",
    "@hive/eslint-config-custom": "workspace:*",
    "@hive/smart-signer": "workspace:*",
    "@hive/tailwindcss-config": "workspace:*",
    "@hive/transaction": "workspace:*",
    "@hive/tsconfig": "workspace:*",
    "@hive/ui": "workspace:*",
    "@hiveio/wax": "^1.27.6-rc1-240708114550",
    "@hookform/resolvers": "^3.3.1",
    "@tanstack/react-query": "^4.36.1",
    "http-errors": "^2.0.0",
    "i18next": "^23.7.9",
    "iron-session": "^8.0.1",
    "next": "^14.2.5",
    "next-i18next": "^15.1.1",
    "next-pwa": "^5.6.0",
    "next-themes": "^0.2.1",
    "pino": "^8.15.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.45.1",
    "react-modal-promise": "^1.0.2",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.2.2",
    "@tanstack/react-query-devtools": "^4.36.1",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.0",
    "@types/http-errors": "^2.0.4",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.44",
    "@types/react-dom": "^18.2.17",
    "copy-webpack-plugin": "^11.0.0",
    "git-revision-webpack-plugin": "^5.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "next-transpile-modules": "^10.0.1",
    "pino-pretty": "^10.2.0",
    "typescript": "5.3.3"
  }
}
