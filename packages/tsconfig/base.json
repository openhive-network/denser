{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "outDir": "build",
    "esModuleInterop": true,
    "lib": ["ES2017", "DOM", "dom.iterable", "ES2021.String", "es2020", "esnext"],
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "strict": true,
    "inlineSourceMap": true,
    "types": ["node"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  }
}
